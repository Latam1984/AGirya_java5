#==============FIND MIN SUM CUSTOMERS ORDERS=======================
SELECT COMPANIES.COMPANY, CUSTOMERS.CUSTOMER,PROJECTS.PROJECT,  MIN(PROJECTS.COSTS) AS TOTAL
FROM CUSTOMERS
INNER JOIN CUSTOMERS_PROJECTS ON
CUSTOMERS.ID = CUSTOMERS_PROJECTS.ID_CUSTOMER
INNER JOIN PROJECTS ON CUSTOMERS_PROJECTS.ID_PROJECT = PROJECTS.ID
INNER JOIN DEVELOPERS_PROJECTS ON PROJECTS.ID = DEVELOPERS_PROJECTS.ID_PROJECTS
INNER JOIN COMPANIES_DEVELOPERS ON COMPANIES_DEVELOPERS.ID_DEVELOPERS = DEVELOPERS_PROJECTS.ID_DEVELOPERS
INNER JOIN COMPANIES on COMPANIES_DEVELOPERS.ID_COMPANY = COMPANIES.ID
GROUP BY CUSTOMER
ORDER BY COSTS